<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainPageActivity"
    android:background="#232323">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_main_page"
            android:textSize="25dp"
            android:textColor="@color/main_text_color"
            android:gravity="center"
            />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/vg_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tb_title"
        app:layout_constraintBottom_toTopOf="@id/bn_bottom_icons"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bn_bottom_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        app:backgroundTint="@color/main_highlight"
        app:itemTextColor="@color/main_text_color"
        app:itemIconTint="@color/main_text_color"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>